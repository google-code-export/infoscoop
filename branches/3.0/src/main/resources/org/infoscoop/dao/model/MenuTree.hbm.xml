<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="MenuTree"
		table="IS_MENU_TREES"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="integer"
			column="ID"
		>
			<generator class="native">
				<param name="sequence">is_menu_trees_id_seq</param>
			</generator>
		</id>

		<property
			name="FkDomainId"
			column="fk_domain_id"
			type="integer"
		/>
		
		<property
			name="Title"
			column="title"
			type="string"
			not-null="true"
			length="255"
		/>
	

		<set name="MenuPositions" inverse="true" cascade="save-update">
			<key column="fk_menu_tree_id"/>
			<one-to-many class="MenuPosition"/>
		</set>

		<set name="MenuItems" inverse="true" cascade="all">
			<key column="fk_menu_tree_id"/>
			<one-to-many class="MenuItem"/>
		</set>


	</class>	
</hibernate-mapping>