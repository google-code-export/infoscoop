<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="TabTemplate"
		table="is_tab_templates"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="integer"
			column="id"
		>
			<generator class="native"/>
		</id>

		<property
			name="Name"
			column="name"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="Published"
			column="published"
			type="integer"
			not-null="true"
			length="10"
		/>
		<!-- TODO must rename this property to fk_role_id -->
		<property
			name="AccessLevel"
			column="access_level"
			type="integer"
			length="10"
		/>
		<property
			name="Layout"
			column="layout"
			type="string"
		/>
		<property
			name="Temp"
			column="temp"
			type="integer"
			not-null="true"
			length="10"
		/>

		<set name="TabTemplateParsonalizeGadgets" cascade="save-update" inverse="true">
			<key column="id"/>
			<one-to-many class="TabTemplateParsonalizeGadget"/>
		</set>

		<set name="TabTemplateStaticGadgets" cascade="save-update" inverse="true">
			<key column="id"/>
			<one-to-many class="TabTemplateStaticGadget"/>
		</set>


	</class>	
</hibernate-mapping>