<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="TabTemplate"
		table="IS_TAB_TEMPLATES"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="integer"
			column="id"
		>
			<generator class="native"/>
		</id>
		<property
			name="FkDomainId"
			column="fk_domain_id"
			type="integer"
		/>
		<property
			name="TabId"
			column="tab_id"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="OrderIndex"
			column="order_index"
			not-null="true"
			type="integer"
		/>
		<property
			name="Name"
			column="name"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="AreaType"
			column="area_type"
			type="integer"
		/>
		<property
			name="Published"
			column="published"
			type="integer"
			not-null="true"
			length="10"
		/>
		<!-- TODO must rename this property to fk_role_id -->
		<property
			name="AccessLevel"
			column="access_level"
			type="integer"
			length="10"
		/>
		<property
			name="Layout"
			column="layout"
			type="string"
		/>
		<property
			name="NumberOfColumns"
			column="number_of_columns"
			type="integer"
		/>
		<property
			name="ColumnWidth"
			column="column_width"
			type="string"
		/>
		<property
			name="Temp"
			column="temp"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="UpdatedAt"
			column="updated_at"
			type="timestamp"
		/>

		<set name="TabTemplatePersonalizeGadgets" cascade="save-update" inverse="true" lazy="false">
			<key column="fk_tabtemplate_id"/>
			<one-to-many class="TabTemplatePersonalizeGadget"/>
		</set>

		<set name="TabTemplateStaticGadgets" cascade="save-update" inverse="true">
			<key column="fk_tabtemplate_id"/>
			<one-to-many class="TabTemplateStaticGadget"/>
		</set>

		<set name="Roles" table="IS_TAB_TEMPLATE_ROLES" lazy="false" outer-join="true" cascade="save-update">
			<key column="fk_tab_template_id"/>
			<many-to-many class="Role" column="fk_role_id"/>
		</set>

	</class>	
</hibernate-mapping>