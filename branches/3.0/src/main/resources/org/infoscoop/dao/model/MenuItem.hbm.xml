<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="MenuItem"
		table="IS_MENU_ITEMS"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="string"
			column="id"
		>
		</id>

		<property
			name="Title"
			column="title"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="MenuOrder"
			column="menu_order"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="Href"
			column="href"
			type="string"
			not-null="false"
			length="255"
		/>
		<property
			name="Publish"
			column="publish"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="Alert"
			column="alert"
			type="integer"
			not-null="true"
			length="10"
		/>
		<many-to-one
			name="FkParent"
			column="fk_parent_id"
			class="MenuItem"
			not-null="false"
		>
		</many-to-one>
		<many-to-one cascade="save-update"
			name="FkGadgetInstance"
			column="fk_gadget_instance_id"
			class="GadgetInstance"
			not-null="true"
			outer-join="true"
		>
		</many-to-one>
	

		<set name="MenuItems" inverse="true">
			<key column="id"/>
			<one-to-many class="MenuItem"/>
		</set>


	</class>	
</hibernate-mapping>