<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="MenuItem"
		table="IS_MENU_ITEMS"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="integer"
			column="ID"
		>
			<generator class="native">
				<param name="sequence">is_menu_item_id_seq</param>
			</generator>
		</id>
		
		<property
			name="MenuId"
			column="menu_id"
			type="string"
			not-null="true"
			length="255"
		/>
		
		<property
			name="FkDomainId"
			column="fk_domain_id"
			type="integer"
		/>
		
		<property
			name="Title"
			column="title"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="MenuOrder"
			column="menu_order"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="Href"
			column="href"
			type="string"
			not-null="false"
			length="255"
		/>
		<property
			name="AccessLevel"
			column="access_level"
			type="integer"
			not-null="true"
			length="10"
		/>
		<property
			name="Alert"
			column="alert"
			type="integer"
			not-null="true"
			length="10"
		/>
		<many-to-one
			name="FkParent"
			column="fk_parent_id"
			class="MenuItem"
			not-null="false"
		>
		</many-to-one>
		<many-to-one cascade="save-update"
			name="GadgetInstance"
			column="fk_gadget_instance_id"
			class="GadgetInstance"
			not-null="false"
			outer-join="true"
		>
		</many-to-one>
		<many-to-one
			name="FkMenuTree"
			column="fk_menu_tree_id"
			class="MenuTree"
			not-null="true"
		>
		</many-to-one>
	

		<set name="MenuItems" inverse="true">
			<key column="id"/>
			<one-to-many class="MenuItem"/>
		</set>

		<set name="Roles" table="IS_MENU_ITEM_ROLES" lazy="false" outer-join="true" cascade="save-update">
			<key column="fk_menu_item_id"/>
			<many-to-many class="Role" column="fk_role_id"/>
		</set>
	</class>	
</hibernate-mapping>