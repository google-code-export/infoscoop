<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="Role"
		table="is_roles"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="integer"
			column="id"
		>
			<generator class="native"/>
		</id>

		<property
			name="Name"
			column="name"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="Description"
			column="description"
			type="string"
			not-null="false"
		/>


		<list name="RolePrincipals" inverse="false" cascade="save-update" lazy="false" table="is_role_principals">
			<key column="fk_role_id"/>
			<list-index column="order_index" />
			<one-to-many class="RolePrincipal"/>
		</list>


	</class>
</hibernate-mapping>