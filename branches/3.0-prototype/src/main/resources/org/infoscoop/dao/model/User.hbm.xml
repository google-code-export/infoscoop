<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="User"
		table="IS_USERS"
	>
		<meta attribute="sync-DAO">false</meta>
		<id
			name="Id"
			type="java.lang.String"
			column="id"
		>
			<generator class="native"/>
		</id>

		<property
			name="FkDomainId"
			column="fk_domain_id"
			type="integer"
		/>
		
		<property
			name="Name"
			column="name"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="Email"
			column="email"
			type="string"
			not-null="true"
			length="255"
		/>
		<property
			name="Admin"
			column="admin"
			type="integer"
			not-null="true"
			length="10"
		/>

		<set name="Groups" table="IS_USER_GROUP">
			<key column="fk_user_id"/>
			<many-to-many class="Group" column="fk_group_id"/>
		</set>


	</class>
</hibernate-mapping>