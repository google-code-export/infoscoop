<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="OAuthToken"
		table="IS_OAUTH_TOKENS"
	>
		<meta attribute="sync-DAO">false</meta>


		<composite-id name="Id" class="OAUTH_TOKEN_PK">
			<key-property name="FkDomainId" column="fk_domain_id" type="integer"/>
			<key-property name="Uid" column="`UID`" type="string"/>
			<key-property name="GadgetUrlKey" column="gadget_url_key" type="string"/>
			<key-property name="ServiceName" column="service_name" type="string"/>
		</composite-id>
		
		<property
			name="gadgetUrl"
			column="gadget_url"
			type="string"
			not-null="true"
			length="1024"
		/>
		
		<property
			name="requestToken"
			column="request_token"
			type="string"
			length="255"
		/>
		
		<property
			name="accessToken"
			column="access_token"
			type="string"
			length="255"
		/>
		
		<property
			name="tokenSecret"
			column="token_secret"
			type="string"
			not-null="true"
			length="255"
		/>
	</class>	
</hibernate-mapping>