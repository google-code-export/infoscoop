<?xml version="1.0" encoding="UTF-8"?>
<searchEngines>
	<defaultSearch>
		<searchEngine title="Google" retrieveUrl="http://www.google.co.jp/search?q=">
			<countRule method="regexp" value=".*検索結果 約 &lt;b&gt;([0-9,]+)&lt;/b&gt; 件中.*"/>
		</searchEngine>
		<searchEngine title="@IT" retrieveUrl="http://www.atmarkit.co.jp/misc/search/search.php?query=" encoding="shift_jis">
			<countRule method="regexp" value="([0-9]+)件中.*"/>
		</searchEngine>
		<searchEngine title="Yahoo" retrieveUrl="http://search.yahoo.co.jp/search?p=" encoding="euc-jp">
			<countRule method="regexp" value=".*約&lt;strong&gt;([0-9,]+)&lt;/strong&gt;件.*"/>
		</searchEngine>
		<searchEngine title="inicio-syanai" retrieveUrl="http://inicio/syanai/search.do?word=">
			<countRule method="regexp" value="([0-9]+)件中.*"/>
		</searchEngine>
		<searchEngine title="inicio-mark" retrieveUrl="http://inicio/marketing/search.do?word=">
			<countRule method="regexp" value="([0-9]+)件中.*"/>
		</searchEngine>
		<searchEngine title="inicio-portal" retrieveUrl="http://inicio/portal/search.do?word=">
			<countRule method="regexp" value="([0-9]+)件中.*"/>
		</searchEngine>
		<searchEngine title="全社掲示板" retrieveUrl="http://notes/notesdb/PUB/_q228oq44mm574alqj_.nsf/492560fb004837178525562f001195f6?SearchView&amp;Query=" encoding="shift_jis" pageEncoding="shift_jis">
			<countRule method="regexp" value=".*&lt;h4&gt;([0-9]+)\s文書見つかりました&lt;/h4&gt;.*"/>
		</searchEngine>
	</defaultSearch>
	<rssSearch>
		<!--正規表現の置換で指定するケース-->
		<searchEngine retrieveUrl="$1Search$2&amp;word=">
			<rssPattern>^(http://sufgtb11/knowledge/user_wc_k2/action/[a-zA-Z]+/[a-zA-Z]+)DbRss(.*)$</rssPattern>
			<countRule method="id" value="SearchResultsCount"/>
		</searchEngine>
		<!--1対1で指定するケース-->
		<searchEngine retrieveUrl="http://sufgtb11/knowledge/user_wc_k2/action/discussion/DiscussionSearch?id=DG00000001&amp;word=">
			<rssPattern>^http://sufgtb11/knowledge/user_wc_k2/action/discussion/DiscussionDbRss\?id=DG00000001$</rssPattern>
			<countRule method="id" value="SearchResultsCount"/>
		</searchEngine>
		<!--inicio-->
		<searchEngine retrieveUrl="http://$1/$2/search.do?category=$3&amp;word=">
			<rssPattern>^http://(inicio|172.22.106.214:18080)/([^/]+)/rss.do\?category=([^&amp;]*)</rssPattern>
			<countRule method="regexp" value="([0-9]+)件中.*"/>
		</searchEngine>
		<!--特定のRSSは検索をしない場合は、retrieveUrlがないsearchEngine要素を設定する-->
		<searchEngine>
			<rssPattern>^http://rss.rssad.jp/</rssPattern>
		</searchEngine>
		<!--上記に該当しないRSSをgoogleサイト内検索で検索する設定例-->
		<searchEngine retrieveUrl="http://www.google.com/search?&amp;q=site%3A$1+">
			<rssPattern>^http://([^/]+)/.*</rssPattern>
			<countRule method="regexp" value=".*からの約? &lt;b&gt;([0-9,]+)&lt;/b&gt; 件中.*"/>
		</searchEngine>
	</rssSearch>
</searchEngines>
