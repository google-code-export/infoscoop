<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.infoscoop.dao.model">
	<class
		name="OAuth2Token"
		table="IS_OAUTH2_TOKENS"
	>
		<meta attribute="sync-DAO">false</meta>


		<composite-id name="Id" class="OAUTH2_TOKEN_PK">
			<key-property name="Uid" column="`UID`" type="string"/>
			<key-property name="FkOAuthId" column="fk_oauth_id" type="string"/>
		</composite-id>
				
		<property
			name="authCode"
			column="auth_code"
			type="string"
			length="255"
		/>

		<property
			name="accessToken"
			column="access_token"
			type="string"
			length="255"
		/>
		
		<property
			name="refreshToken"
			column="refresh_token"
			type="string"
			length="255"
		/>
		
		<property
			name="validityPeriodUTC"
			column="validity_period_utc"
			type="java.lang.Long"
		/>		
	</class>	
</hibernate-mapping>